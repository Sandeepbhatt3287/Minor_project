<!DOCTYPE html>
<head>
    <title>
        <%=locals.title%>
    </title>
    <script src="https://kit.fontawesome.com/5dcb08b4c4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <h1>
        TODO list
    </h1>
       <div>
           <ul type="disc">
               <%for(let i of todo_list){%>
                <li>
                    <div>
                        <p>
                            <%=i.description%>
                        </p>
                        <p>
                            <%=i.category%>
                        </p>
                        <p>
                            <%=i.date%>
                        </p>
                    </div>
                </li>
                <%}%>
           </ul>
       </div>
    <div>
        <form action="/create-todo" method="POST">
         <p>Description</p>   
        <input type="text" name ="description"placeholder="What do you need to do?" required>
        <h3>Category</h3> 
        <input type="text" name="category"placeholder="Choose your category">
         <H3>DATE</H3> 
         <input type="date" name ="date">
         <button type="submit">ADD TASK</button>
         <button type="submit">DELETE TASK</button>
        </form>

    </div>
    
    
</body>
<script type="text/javascript" src="/js/home.js"></script>
</html>