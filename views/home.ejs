<!DOCTYPE html>
<head>
    <title>
        <%=locals.title%>
    </title>
    <script src="https://kit.fontawesome.com/5dcb08b4c4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <h1>
        TODO list
    </h1>
    <div class="form-section">
        <form class="form" action="/create-todo" method="POST">
         
         <!-- Description section -->
       <h3>Description</h3>   
        <input type="text"  class="new description" name ="description"placeholder="What do you need to do?" required>
        
        <!-- Category section -->
        <h3>Category

            <select class="new category" name="category" >
                <option label="Select your category" disabled selected></option>
                <option  value="Personal">
                     Personal
                </option>
                <option value="Office">
                    Office
                </option>
                <option value="College">
                    College
                </option>
                <option value="Sports">
                    Sports
                </option>
                <option value="School">
                    School
                </option>
        </select>
        </h3> 

              

        <!-- date section -->
        <h3>Date </h3>
         <i class="fas fa-calendar-alt"></i>
         <input  class="date new" type="date" name ="date" required>
         
        
    <div class="ad-btn">
         <!-- ADD TASK button -->
     <button class="add-btn" type="submit"> + ADD TASK</button>
     
    </div>
     </form>

    </div>

    
       <!-- <div class="todolist">  -->
           <ul type="none" class="todolist-ul">
               
               <%for(let i of todo_list){%>
                <li class="todolist-li">
                    <div class="todo-des">
                        <p>
                            <%=i.description%>
                        </p>
                        
                        <p>
                            <i class="fas fa-calendar-alt"></i>
                            <%=i.date%>
                        </p>

                    </div>
                    <button class="todo-cat">
                        <p>
                            <%=i.category%>
                        </p>
                    </button>


                    <!-- delete button -->

                    <a href="/delete-todo/?id=<%= i.id%>">
                        <button class="todo-del">DELETE TASK
                            <i class="fas fa-user-minus"></i>
                        </button>
                    </a>
                
                </li>

             <%}%>
           </ul> 
        <!-- </div>      todolist div ends  -->
    

    
</body>
<script type="text/javascript" src="/js/home.js"></script>
</html>